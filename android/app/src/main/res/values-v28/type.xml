<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    TODO 이거 확정해야 할듯-->
    <style name="TextAppearance.Poke" parent="">
        <item name="android:fontFamily">@font/poke_font</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Poke.HeadLine">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="TextAppearance.Poke.HeadLineBold">
        <item name="android:textFontWeight">600</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">32sp</item>
    </style>

    <style name="TextAppearance.Poke.Title">
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="TextAppearance.Poke.TitleBold">
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">20sp</item>
        <item name="lineHeight">28sp</item>
    </style>

    <style name="TextAppearance.Poke.Body">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">8sp</item>
        <item name="lineHeight">12sp</item>
    </style>

    <style name="TextAppearance.Poke.BodyBold">
        <item name="android:textFontWeight">600</item>
        <item name="android:textSize">8sp</item>
        <item name="lineHeight">12sp</item>
    </style>

    <style name="TextAppearance.Poke.Popup">
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">22sp</item>
    </style>

