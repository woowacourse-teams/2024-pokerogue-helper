<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="typeResult"
            type="poke.rogue.helper.presentation.type.model.TypeMatchedResultUiModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="24dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_end="24dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="20dp" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/gl_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_end="40dp" />

                <TextView
                    android:id="@+id/tv_type_my_type_title"
                    style="@style/type_choice_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/type_my_type_title"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toTopOf="@id/gl_top" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_type_choice"
                    android:padding="2dp"
                    android:src="@drawable/ic_type_reset"
                    app:layout_constraintBottom_toBottomOf="@id/tv_type_my_type_title"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintTop_toTopOf="@id/tv_type_my_type_title" />

                <View
                    android:id="@+id/vw_type_my_type_content"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_type_choice"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_type_my_type_title" />

                <poke.rogue.helper.presentation.type.view.PokeParallelogramLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:contentColor="@color/poke_bug"
                    app:layout_constraintBottom_toBottomOf="@id/vw_type_my_type_content"
                    app:layout_constraintEnd_toEndOf="@id/vw_type_my_type_content"
                    app:layout_constraintStart_toStartOf="@id/vw_type_my_type_content"
                    app:layout_constraintTop_toTopOf="@id/vw_type_my_type_content">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:elevation="10dp"
                        android:src="@drawable/icon_type_bug"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/btn_type_my_type_delete"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_type_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </poke.rogue.helper.presentation.type.view.PokeParallelogramLayout>

                <TextView
                    android:id="@+id/tv_type_opponent_type_title"
                    style="@style/type_choice_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/type_opponent_type_title"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/vw_type_my_type_content" />

                <View
                    android:id="@+id/vw_type_opponent_type_content_1"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/bg_type_choice"
                    app:layout_constraintEnd_toStartOf="@id/vw_type_opponent_type_content_2"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_type_opponent_type_title" />


                <poke.rogue.helper.presentation.type.view.PokeParallelogramLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:contentColor="@color/poke_bug"
                    app:layout_constraintBottom_toBottomOf="@id/vw_type_opponent_type_content_1"
                    app:layout_constraintEnd_toEndOf="@id/vw_type_opponent_type_content_1"
                    app:layout_constraintStart_toStartOf="@id/vw_type_opponent_type_content_1"
                    app:layout_constraintTop_toTopOf="@id/vw_type_opponent_type_content_1">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:elevation="10dp"
                        android:src="@drawable/icon_type_bug"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/btn_type_opponent_type_delete_1"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_type_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </poke.rogue.helper.presentation.type.view.PokeParallelogramLayout>

                <View
                    android:id="@+id/vw_type_opponent_type_content_2"
                    android:layout_width="0dp"
                    android:layout_height="68dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/bg_type_choice"
                    app:layout_constraintBottom_toBottomOf="@id/vw_type_opponent_type_content_1"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintStart_toEndOf="@id/vw_type_opponent_type_content_1"
                    app:layout_constraintTop_toTopOf="@id/vw_type_opponent_type_content_1" />

                <poke.rogue.helper.presentation.type.view.PokeParallelogramLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    app:contentColor="@color/poke_bug"
                    app:layout_constraintBottom_toBottomOf="@id/vw_type_opponent_type_content_2"
                    app:layout_constraintEnd_toEndOf="@id/vw_type_opponent_type_content_2"
                    app:layout_constraintStart_toStartOf="@id/vw_type_opponent_type_content_2"
                    app:layout_constraintTop_toTopOf="@id/vw_type_opponent_type_content_2">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:elevation="10dp"
                        android:src="@drawable/icon_type_bug"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/btn_type_opponent_type_delete_2"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_type_delete"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </poke.rogue.helper.presentation.type.view.PokeParallelogramLayout>


                <TextView
                    android:id="@+id/tv_type_result_title"
                    style="@style/type_choice_title_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:text="@string/type_result_title"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/vw_type_opponent_type_content_1" />

                <TextView
                    android:id="@+id/tv_type_result_sub_content"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/type_result_sub_title"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@id/tv_type_result_title"
                    app:layout_constraintStart_toStartOf="@id/tv_type_result_title"
                    app:layout_constraintTop_toBottomOf="@id/tv_type_result_title" />

                <poke.rogue.helper.presentation.type.view.TypeResultView
                    android:id="@+id/type_result_1"
                    typeResult="@{typeResult}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/tv_type_result_title" />

                <poke.rogue.helper.presentation.type.view.TypeResultView
                    android:id="@+id/type_result_2"
                    typeResult="@{typeResult}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/type_result_1" />

                <poke.rogue.helper.presentation.type.view.TypeResultView
                    android:id="@+id/type_result_3"
                    typeResult="@{typeResult}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="@id/gl_end"
                    app:layout_constraintStart_toStartOf="@id/gl_start"
                    app:layout_constraintTop_toBottomOf="@id/type_result_2" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
