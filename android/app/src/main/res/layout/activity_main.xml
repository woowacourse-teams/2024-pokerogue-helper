<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.component.MainActivity">

        <poke.rogue.helper.ui.component.PokeChipGroup
            android:id="@+id/poke_chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:direction="row"
            app:itemSpacing="8dp"
            app:lineSpacing="12dp" />

        <poke.rogue.helper.ui.component.PokeChip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:label="나는 no binding 칩"
            app:leadingIcon="@drawable/ic_arrow_back_24" />

    </LinearLayout>
</layout>