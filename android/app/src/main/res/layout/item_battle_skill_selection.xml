<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="skill"
            type="poke.rogue.helper.presentation.battle.model.SkillSelectionUiModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_battle_selection"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp">

        <TextView
            style="@style/TextAppearance.Poke.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@{skill.name}"
            tools:text="기술 이름" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_type"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            imageRes="@{skill.type.typeIconResId}"
            tools:src="@drawable/img_tmp_loading" />

        <Space
            android:layout_width="8dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_category"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            imageUrl="@{skill.category}"
            tools:src="@drawable/img_tmp_loading" />
    </LinearLayout>
</layout>
