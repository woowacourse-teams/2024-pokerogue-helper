<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pokemon"
            type="poke.rogue.helper.presentation.poketmon.PokemonUiModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_item_poketmon_poketmon"
            imageUrl="@{pokemon.imageUrl}"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tv_item_poketmon_poketmon_name"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_item_poketmon_poketmon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{pokemon.name}"
            app:layout_constraintBottom_toTopOf="@id/iv_item_poketmon_poketmon_first_type"
            app:layout_constraintEnd_toEndOf="@+id/iv_item_poketmon_poketmon"
            app:layout_constraintStart_toStartOf="@+id/iv_item_poketmon_poketmon"
            app:layout_constraintTop_toBottomOf="@+id/iv_item_poketmon_poketmon"
            tools:text="피카츄" />

        <ImageView
            android:id="@+id/iv_item_poketmon_poketmon_first_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/temporal_electric_long_type"
            app:layout_constraintEnd_toStartOf="@id/tv_item_poketmon_poketmon_second_type"
            app:layout_constraintStart_toStartOf="@id/iv_item_poketmon_poketmon"
            app:layout_constraintTop_toBottomOf="@id/tv_item_poketmon_poketmon_name" />

        <ImageView
            android:id="@+id/tv_item_poketmon_poketmon_second_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/temporal_normal_long_type"
            app:layout_constraintEnd_toEndOf="@id/iv_item_poketmon_poketmon"
            app:layout_constraintStart_toEndOf="@id/iv_item_poketmon_poketmon_first_type"
            app:layout_constraintTop_toTopOf="@id/iv_item_poketmon_poketmon_first_type" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>