<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="evolutions"
            type="poke.rogue.helper.presentation.dex.model.EvolutionsUiModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_pokemon_evolution_chain_null"
            visible="@{!evolutions.hasEvolutionChain()}"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_ditto_silhouette"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            style="@style/TextAppearance.Poke.TitleLarge"
            visible="@{!evolutions.hasEvolutionChain()}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon_detail_evolution_no_evolution_chain"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_pokemon_evolution_chain_null" />

        <poke.rogue.helper.presentation.dex.detail.evolution.PokemonEvolutionViewGroup
            android:id="@+id/rv_pokemon_evolution_depth_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/divider_pokemon_evolution_depth_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_pokemon_evolution_depth_1"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            app:layout_constraintBottom_toTopOf="@id/rv_pokemon_evolution_depth_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_pokemon_evolution_depth_0" />

        <poke.rogue.helper.presentation.dex.detail.evolution.PokemonEvolutionViewGroup
            android:id="@+id/rv_pokemon_evolution_depth_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/divider_pokemon_evolution_depth_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_pokemon_evolution_depth_1" />


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_pokemon_evolution_depth_2"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            app:layout_constraintBottom_toTopOf="@id/rv_pokemon_evolution_depth_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_pokemon_evolution_depth_1" />

        <poke.rogue.helper.presentation.dex.detail.evolution.PokemonEvolutionViewGroup
            android:id="@+id/rv_pokemon_evolution_depth_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/divider_pokemon_evolution_depth_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_pokemon_evolution_depth_2" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/divider_pokemon_evolution_depth_3"
            visible="@{!evolutions.evolutions(3).empty}"
            android:layout_width="0dp"
            android:layout_height="0.5dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="4dp"
            app:layout_constraintBottom_toTopOf="@id/rv_pokemon_evolution_depth_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_pokemon_evolution_depth_2" />

        <poke.rogue.helper.presentation.dex.detail.evolution.PokemonEvolutionViewGroup
            android:id="@+id/rv_pokemon_evolution_depth_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider_pokemon_evolution_depth_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>