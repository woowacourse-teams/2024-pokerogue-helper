<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Poke" parent="">
        <item name="font">@font/pretendard_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TextAppearance.Poke.TitleLarge">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.Poke.TitleLargeBold">
        <item name="android:textStyle">bold</item>
        <item name="font">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">24sp</item>
    </style>

    <style name="TextAppearance.Poke.Title">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">22.5sp</item>
    </style>

    <style name="TextAppearance.Poke.TitleBold">
        <item name="android:textStyle">bold</item>
        <item name="font">@font/pretendard_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">22.5sp</item>
    </style>

    <style name="TextAppearance.Poke.Description">
        <item name="android:textSize">15sp</item>
        <item name="lineHeight">22.5sp</item>
    </style>

    <style name="TextAppearance.Poke.CaptionLarge">
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18.5sp</item>
    </style>

    <style name="TextAppearance.Poke.CaptionLargeBold">
        <item name="android:textStyle">bold</item>
        <item name="font">@font/pretendard_semibold</item>
        <item name="android:textSize">13sp</item>
        <item name="lineHeight">18.5sp</item>
    </style>

    <style name="TextAppearance.Poke.Caption">
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">16.5sp</item>
    </style>

    <style name="TextAppearance.Poke.CaptionBold">
        <item name="android:textStyle">bold</item>
        <item name="font">@font/pretendard_semibold</item>
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">16.5sp</item>
    </style>

</resources>
